<div class="bg-white flex justify-between items-center px-2 py-4 mb-4">
  <%= link_to products_path do %>
    <h1 class="text-2xl font-bold text-green-700"><%= t('app_name') %></h1>
  <% end %>

  <div>
    <%= link_to t('.add_product'), new_product_path, class:"mx-2 font-bold" if Current.user %>
    <%= link_to t('.see_categories'), categories_path, class:"mx-2 font-bold" if Current.user&.admin? %>

    <%= link_to t('common.login'), new_session_path, class:"mx-2 font-bold" unless Current.user %>
    <%= link_to t('common.signin'), new_user_path, class:"mx-2 font-bold" unless Current.user %>
      
    <%= link_to t('common.logout'), session_path(Current.user.id), class:"mx-2 font-bold", data: {
      turbo_method: :delete, 
      turbo_confirm: t('common.confirm_message')
      } if Current.user %>
  </div>
</div>

